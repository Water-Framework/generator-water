<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="<%-projectSuffixUpperCase%>-features">
  
  <feature name="<%-projectSuffixLowerCase%>-feature" version="${project.version}" description="All <%-projectSuffixUpperCase%> Modules">
    <feature>water-core-features</feature>
<% if(applicationTypeEntity){ -%>
    <bundle start-level="80">mvn:it.water.repository.jpa/JpaRepository-osgi/${project.waterVersion}</bundle>
<% } -%>
<% if(hasRestServices){ -%>
    <bundle start-level="80">mvn:it.water.service.rest/Rest-service/${project.waterVersion}</bundle>
    <bundle start-level="80">mvn:it.water.service.rest/Rest-api-manager-apache-cxf/${project.waterVersion}</bundle>
<% } -%>    
    <bundle start-level="80">mvn:<%-projectGroupId%>/<%- projectSuffixUpperCase %>/${project.version}</bundle>
  </feature>
</features>